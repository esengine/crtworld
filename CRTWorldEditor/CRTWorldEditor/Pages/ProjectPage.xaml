<Page x:Class="CRTWorldEditor.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRTWorldEditor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Right" Margin="0 5 0 0">
            <Button Content="添加" MinWidth="120" MinHeight="20"></Button>
            <Button Content="新建" MinWidth="120" MinHeight="20" Margin="5 0 0 0" Click="OnCreateProjectClick"></Button>
        </WrapPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="项目">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="项目名称" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="目标版本"></DataGridTextColumn>
                        <DataGridTextColumn Header="最后修改"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
